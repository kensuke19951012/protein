<!-- ユーザーの詳細 -->
<div>
  <h3><%= @member.name %></h3>
  <%= image_tag @member.get_profile_image(100,100) %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @post.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag post.member.get_profile_image(100,100) %></p>
  <p>ショップ名：<%= post.item_name %></p>
  <p>説明：<%= post.introduction %></p>
  <p>ユーザーネーム：<%= post.member.name %></p>
</div>
<% end %>