
<div class ="container"></div>
<div class="card-list-container py-5">

<h1>みんなが飲んだプロテイン</h1>
<%= form_with url: "/search", method: :get, local: true do |f| %>
<%= f.text_field :keyword, value: @keyword %>
<%= f.submit "検索" %>
<% end %>


        <%= form_with url: "/search", method: :get, local: true do |f| %>

          <% Genre.all.each do |genre| %>
            <%= f.radio_button :genre_id, genre.id%>

           <%= f.label :genre, genre.name%>
         <% end %>




        <% end %>
</div>

  <% @posts.each do |post| %>

  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.member.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_path(post.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post.item_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= post.introduction %></p>
            <%if post.genre %>
  <%= post.genre.name%>
  <%end%>
          <p>評価：<%= post.star%></p>
          <span><i class="fas fa-user"></i> By <%= post.member.name %> ｜ </span>
          <span> <%= link_to "#{post.comments.count} コメント", post_path(post.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%#= paginate @posts %>
</div>

<%= link_to '共有する', new_post_path %>
</div>


